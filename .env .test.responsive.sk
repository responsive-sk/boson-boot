# Boson PHP HTMX Application Configuration
# Copy this file to .env and update the values

# Application
APP_NAME="Boson PHP"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://test.responsive.sk

# Database
DB_CONNECTION=sqlite
DB_DATABASE=./database/blog.sqlite
DB_FOREIGN_KEYS=true

# Blog Settings
BLOG_POSTS_PER_PAGE=10
BLOG_EXCERPT_LENGTH=150

# Admin Settings
ADMIN_EMAIL=admin@bosonphp.com
ADMIN_PASSWORD=change-this-password

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=./public/uploads

# Cache
CACHE_DRIVER=file
CACHE_PATH=./storage/cache

# Session
SESSION_DRIVER=file
SESSION_PATH=./storage/sessions
SESSION_LIFETIME=7200

# Security
APP_KEY=base64:generate-your-own-32-character-secret-key
CSRF_TOKEN_NAME=app_token

# Search
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=50

# Performance
TEMPLATE_CACHE=false
TEMPLATE_CACHE_PATH=./storage/templates

# Development
LOG_LEVEL=debug
LOG_PATH=./storage/logs

# New Kernel Configuration
ENABLE_LOGGING=true
ERROR_LOG_FILE=./storage/logs/error.log
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_ATTEMPTS=100
RATE_LIMIT_WINDOW_SECONDS=300

# Theme System
THEME=svelte

# CORS Configuration (for API)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# API Configuration
API_RATE_LIMIT_MAX_ATTEMPTS=60
API_RATE_LIMIT_WINDOW_SECONDS=60
API_VERSION=1.0

# Advanced Development Tools
ENABLE_DEBUG_BAR=false
ENABLE_QUERY_LOG=true
ENABLE_PERFORMANCE_MONITORING=false
