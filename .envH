# Boson PHP HTMX Application Configuration

# Application
APP_NAME="Boson PHP"
APP_ENV=development
APP_DEBUG=false
APP_URL=https://test.responsive.sk

# Database
DB_CONNECTION=sqlite
DB_DATABASE=./database/blog.sqlite
DB_FOREIGN_KEYS=true

# Blog Settings
BLOG_POSTS_PER_PAGE=10
BLOG_EXCERPT_LENGTH=150

# Admin Settings
ADMIN_EMAIL=admin@bosonphp.com
ADMIN_PASSWORD=admin123

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=./public/uploads

# Cache
CACHE_DRIVER=file
CACHE_PATH=./storage/cache

# Session
SESSION_DRIVER=file
SESSION_PATH=./storage/sessions
SESSION_LIFETIME=7200

# Security
APP_KEY=base64:your-32-character-secret-key-here
CSRF_TOKEN_NAME=_token

# Search
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=50

# Performance
TEMPLATE_CACHE=true
TEMPLATE_CACHE_PATH=./storage/cache/templates
TEMPLATE_CACHE_TTL=3600

THEME=svelte
VERSION=1.0.0

# Middleware
SECURITY_HEADERS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW=300
RATE_LIMIT_API=30

# Development
LOG_LEVEL=debug
LOG_PATH=./storage/logs
