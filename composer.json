{
    "name": "boson/ddd-blog-htmx",
    "description": "Pragmatic DDD + HTMX + SQLite implementation of Boson PHP blog",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "league/plates": "^3.5",
        "nikic/fast-route": "^1.3",
        "psr/container": "^2.0",
        "responsive-sk/slim4-paths": "^6.0"
    },
    "require-dev": {
        "behat/behat": "^3.13",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Boson\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:behat": "behat",
        "test:all": [
            "@test",
            "@test:behat"
        ],
        "analyse": "phpstan analyse",
        "analyse:strict": "phpstan analyse --level=max",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "quality": [
            "@analyse",
            "@cs:check",
            "@test:all"
        ],
        "serve": "php -S localhost:8080 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
