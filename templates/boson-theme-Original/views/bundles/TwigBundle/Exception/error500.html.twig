{% extends 'layout/master.html.twig' %}

{% block title %}
    Internal Server Error :: {{ parent() }}
{% endblock %}

{% block body %}

    <boson-default-layout>
        <boson-page-title>
            <h2>Internal Server Error</h2>
        </boson-page-title>

        <boson-breadcrumbs>
            {% apply spaceless %}
                <div class="breadcrumb-item">
                    <boson-button type="ghost" href="{{ path('home') }}">
                        Home
                    </boson-button>
                </div>

                <div class="breadcrumb-item">
                    <boson-button type="ghost">
                        500 Error
                    </boson-button>
                </div>
            {% endapply %}
        </boson-breadcrumbs>

        <section class="error-content">
            <hgroup style="padding: 3em 0; text-align: center;">
                <h1 style="font-size: 4em; color: #F93904; margin-bottom: 0.5em;">500</h1>
                <h2 style="margin-bottom: 1em;">Internal Server Error</h2>
                <p style="font-size: 1.2em; margin-bottom: 2em; opacity: 0.8;">
                    We're experiencing some technical difficulties. Please try again later.
                </p>
                
                <div style="display: flex; gap: 1em; justify-content: center; flex-wrap: wrap;">
                    <boson-button href="{{ path('home') }}" icon="/images/icons/arrow_primary.svg">
                        Go Home
                    </boson-button>
                    
                    <boson-button type="secondary" onclick="window.location.reload()" icon="/images/icons/arrow_secondary.svg">
                        Try Again
                    </boson-button>
                </div>
            </hgroup>

            <div style="margin-top: 3em; padding: 2em; background: rgba(249, 57, 4, 0.1); border-radius: 8px;">
                <h3 style="margin-bottom: 1em;">What's happening?</h3>
                <p style="margin-bottom: 1em;">
                    Our servers are experiencing some technical issues. 
                    Our team has been notified and is working to resolve this.
                </p>
                
                <h4 style="margin-bottom: 0.5em;">What you can do:</h4>
                <ul style="list-style: none; padding: 0;">
                    <li style="margin-bottom: 0.5em;">
                        <strong>‚è∞ Wait a moment</strong> - Try refreshing in a few minutes
                    </li>
                    <li style="margin-bottom: 0.5em;">
                        <strong>üè† Visit homepage</strong> - Other parts of the site may work
                    </li>
                    <li>
                        <strong>üìß Report issue</strong> - Help us fix it faster
                    </li>
                </ul>
            </div>
        </section>

    </boson-default-layout>
{% endblock %}
